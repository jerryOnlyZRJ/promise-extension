{
  "name": "promise-extension",
  "version": "1.0.0",
  "description": "extend native promise api",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "index.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "tests/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest --coverage"
  },
  "keywords": [
    "Promise"
  ],
  "author": "Ranjay Zheng",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4"
  }
}
